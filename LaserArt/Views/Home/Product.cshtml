@model LaserArt.Models.Product

@{
    ViewBag.Title =Model.ProductTitle;
}

<h2 class="h1">@Model.ProductTitle</h2>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageSource" class="imageHeader" />
        </div>
        <div class="col-md-6">
            <hr>
            <h3>About</h3>
            <h3>@Model.ProductDescription</h3>
            <hr>
            <h2>Price: @Model.Price $</h2>
            <hr>
        </div>
    </div>
    </div>

